<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.szopa.poetry.MainActivity"
    android:columnCount="3"
    android:useDefaultMargins="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/words"
        android:id="@+id/wordsLabelTextView"
        android:layout_column="0"
        android:layout_row="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/words_amount"
        android:id="@+id/wordsAmountTextView"
        android:layout_row="0"
        android:layout_column="1" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wordsSeekBar"
        android:layout_column="2"
        android:indeterminate="false"
        android:layout_gravity="fill_horizontal"
        android:max="5"
        android:longClickable="true"
        android:layout_row="0"
        android:progress="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lines"
        android:id="@+id/linesLabelTextView"
        android:layout_column="0"
        android:layout_row="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lines_amount"
        android:id="@+id/linesAmountTextView"
        android:layout_row="1"
        android:layout_column="1" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linesSeekBar"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:progress="1"
        android:longClickable="false"
        android:max="5"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paragraphs"
        android:id="@+id/paragraphsLabelTextView"
        android:layout_column="0"
        android:layout_row="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paragraphs_amount"
        android:id="@+id/paragraphsAmountTextView"
        android:layout_row="2"
        android:layout_column="1" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paragraphsSeekBar"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:progress="1"
        android:max="5"
        android:indeterminate="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_poem"
        android:onClick="goToDisplayPoem"
        android:id="@+id/generatePoem"
        android:layout_column="0"
        android:layout_row="3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/button"
        android:layout_row="23"
        android:layout_column="0"
        android:allowUndo="false"
        android:onClick="onButtonClick"
        android:backgroundTint="#61f2a7"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:textColor="#131313"/>

</GridLayout>
